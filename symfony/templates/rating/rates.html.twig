{% extends 'base.html.twig' %}


{% block body %}
<div class="w-4/5 mx-auto text-white">
    <h1 class="text-3xl font-bold mb-5">Liste des utilisateurs</h1>

    <table class="flex flex-col w-full">
        <thead>
            <tr class="w-full justify-around">
                <th>Id</th>
                <th>Value</th>
                <th>Comment</th>
                <th>Date</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody class="flex justify-around">
        {% for r in seriesRates %}
            <tr>
                <td>{{ r.id }}</td>
                <td>{{ r.value }}</td>
                <td>{{ r.comment }}</td>
                <td>{{ r.date ? r.date|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5" class="text-2xl">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
</div>

