{% extends 'base.html.twig' %}

{% block title %}Register{% endblock %}

{% block stylesheets %}
<link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Sofia|Bahnschrift">
{{ encore_entry_link_tags('app') }}
    {% endblock %}

{% block body %}
   

    <div class=" flex flex-col text-black text-3xl m-auto flex flex-co items-center p-10">
        <h1 class="text-5xl pb-4 text-white font-semibold">Inscription</h1>
            {{ form_start(registrationForm) }}
            <div class="infos p-6 text-white flex flex-col w-min items-center justify-center font-semibold">
                {{ form_row(registrationForm.name, {
                    'label': 'Nom'
                }) }}
                {{ form_row(registrationForm.email, {
                    'label': 'E-mail'
                }) }}
                {{ form_row(registrationForm.plainPassword, {
                    label: 'Mot de passe'
                }) }}
            
                {{ form_row(registrationForm.captcha) }}
        
                <button type="submit" class="mt-10 bg-blue-500 hover:bg-blue-700 text-white font-bold items-center pt-3 pb-4 px-4 rounded focus:outline-none focus:shadow-outline">Cr√©er un compte</button>
                <a class="text-2xl text-blue-500 underline italic mt-5" href="{{path('app_login')}}">Connectez-vous ici!</a>
            </div>
        {{ form_end(registrationForm) }}
    </div>
       

    
    
{% endblock %}
