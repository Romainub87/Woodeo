{% extends 'base.html.twig' %}

{% block title %}Liste séries
{% endblock %}

{% block stylesheets %}
	<link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Sofia|Bahnschrift">
	{{ encore_entry_link_tags('app') }}
{% endblock %}

{% block body %}
    <h1>Séries Aléatoires</h1>
	<iframe src="{{ path('app_series_random')}}" style="width: 100%; height: 450px; border: 1px solid black;"></iframe>
    <div style="height: 30px;"></div>
	<div class="pagination-h">
		{{ knp_pagination_render(series)}}
	</div>
	<div class="flex flex-wrap flex-row w-full items-center justify-center mb-5">
		{% for series in series %}
			<div class="serie-encadre border-none border-4 rounded-3xl flex flex-col-reverse mb-4 h-auto mx-10 mt-10 items-center">
				<h3 class="titre w-full titre font-bold text-white text-xl text-center pt-5 pb-4">{{ series.title }}
				</h3>
				<div class="poster w-full">
					<a href="{{ path('app_series_show', {'id': series.id})}}">
						<img class="border-none rounded-b-none rounded-3xl h-full w-full" src="{{ series.displayPoster }}" alt="poster">
					</a>
					<a>
						<img class="serie-plus absolute" width="60px" src="{{ asset('img/plus.png') }}"/>
						<img class="serie-check absolute" width="60px" src="{{ asset('img/check.png') }}"/>
					</a>
				</div>
			</div>
		{% endfor %}
	</div>
	<div class="pagination-b">
		{{ knp_pagination_render(series)}}
	</div>
{% endblock %}
